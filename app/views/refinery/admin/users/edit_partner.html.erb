<h3> Edit Partner </h3>
<%= form_for  @partner, :url=> "/refinery/admin/users/update_partner" do |f| %>

  <%= render '/refinery/admin/error_messages',
             :object => @partner,
             :include_object_name => true %>
  <%= f.hidden_field :id %>
  <div class='field'>
    <%= f.label "Partner Name" %>
    <%= f.text_field :company_name %>
  </div>
  
  <div class='field'>
    <%= f.label "Site" %>
    <%= f.text_field :site %>
  </div>
  
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <div class='field'>
    <%= f.label :address %>
    <%= f.text_area :address, :size=>'20' %>
  </div>

  <div class='field'>
    <%= f.label :area %>
    <%= f.text_field :area %>
  </div>

  <div class='field'>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  
  <div class='field'>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  
  <div class='field'>
    <%= f.label :employee_strength %>
    <%= f.text_field :employee_strength %>
  </div>

  <%= submit_tag 'Save' %>

<% end %>
