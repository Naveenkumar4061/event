<table width = "100%">
	<tr>
		<td>Event Date</td>		
		<td>Event Title</td>
		<td>No of Tickets</td>
		<td>Purchase Total</td>
		<td></td>
	</tr>
<% @registrations.each do |registration| %>
	<tr>
		<td><%= registration.event.start_date.strftime('%d/%m/%Y %H:%M %P') %></td>
		<td><%= link_to registration.event.title, "/event/#{registration.id}/view_registration" %></td>
		<td><%= registration.no_of_tickets %></td>
		<td><%= registration.total %></td>
		<td><%= link_to 'Gift the Order', "/event/#{registration.id}/gift_a_ticket", :class=>"button_box" %></td>
	</tr>
<% end %>
</table>
