<section id="records">
<%= form_for @venue, :url => "/refinery/events/#{@event.id}/venue_info", :method => :post do |f| -%>
  
    <div class="field">
      <label for="event_venue">Venue Address</label>
      <%= text_field 'venue', 'venue', :value => @venue.venue %>
    </div>

    <div class="field">
      <label for="event_country">Country</label>
      <%= select 'venue', 'country', ['India'] %>
    </div>
    
    <div class="field">
      <label for="event_state">State</label>
      <%= select 'venue', 'state', ['Karnataka'] %>
    </div>
    
    <div class="field">
      <label for="event_city">City</label>
      <%= text_field 'venue', 'city', :value => @venue.city %>
    </div>

    <div class="field">
      <label for="event_locality">Locality</label>
      <%= text_field 'venue', 'locality', :value => @venue.locality %>
    </div>

    <div class="field">
      <label for="event_pincode">Pincode</label>
      <%= text_field 'venue', 'pincode', :value => @venue.pincode %>
    </div>
    <h3>Co-ordinates</h3>
    <div class="field">
      <label for="event_latitude">Latitude</label>
      <%= text_field 'venue', 'latitude', :value => @venue.latitude %>
    </div>
    <div class="field">
      <label for="event_longitude">Longitude</label>
      <%= text_field 'venue', 'longitude', :value => @venue.longitude %>
    </div>
    <div class="field">
      <label for="event_title">Marker Name</label>
      <%= text_field 'venue', 'title', :value => @venue.title %>
    </div>


    <div class="form-actions" style="border-top-left-radius: 5px; border-top-right-radius: 5px; border-bottom-left-radius: 5px; border-bottom-right-radius: 5px;">
      <div class="form-actions-left">
        <input class="wymupdate button" id="submit_button" type="submit" value="Save" style="border-top-left-radius: 6px; border-top-right-radius: 6px; border-bottom-left-radius: 6px; border-bottom-right-radius: 6px;">

      </div>

    </div>

<% end -%>
</section>
<%= render '/refinery/events/admin/events/sidebar' %>